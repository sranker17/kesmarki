<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-tables" author="Daniel Vrabel">
        <createTable tableName="person">
            <column name="id"
                    type="java.lang.Long"
                    remarks="id">
                <constraints primaryKey="true" primaryKeyName="pk_person"/>
            </column>
            <column name="name"
                    type="varchar(255)"
                    remarks="Name">
            </column>
            <column name="temporary_address_id"
                    type="java.lang.Long"
                    remarks="Temporary address id">
            </column>
            <column name="permanent_address_id"
                    type="java.lang.Long"
                    remarks="Permanent address id">
            </column>
            <column name="create_date"
                    type="timestamp"
                    remarks="Create date">
            </column>
        </createTable>

        <createTable tableName="address">
            <column name="id"
                    type="java.lang.Long"
                    remarks="id">
                <constraints primaryKey="true" primaryKeyName="pk_address"/>
            </column>
            <column name="country"
                    type="varchar(255)"
                    remarks="Country">
            </column>
            <column name="city"
                    type="varchar(255)"
                    remarks="City">
            </column>
            <column name="zip"
                    type="varchar(255)"
                    remarks="Zip code">
            </column>
            <column name="street"
                    type="varchar(255)"
                    remarks="Street">
            </column>
            <column name="create_date"
                    type="timestamp"
                    remarks="Create date">
            </column>
        </createTable>

        <createTable tableName="contact">
            <column name="id"
                    type="java.lang.Long"
                    remarks="id">
                <constraints primaryKey="true" primaryKeyName="pk_contact"/>
            </column>
            <column name="contact_type"
                    type="varchar(255)"
                    remarks="Contact type">
            </column>
            <column name="data"
                    type="varchar(255)"
                    remarks="Data">
            </column>
            <column name="address_id"
                    type="java.lang.Long"
                    remarks="Address id">
                <constraints foreignKeyName="fk_contact_address_id" references="address(id)"/>
            </column>
            <column name="create_date"
                    type="timestamp"
                    remarks="Create date">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>